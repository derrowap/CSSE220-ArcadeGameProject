import java.awt.Color;
import java.awt.geom.Point2D;

/*
 * Hero character that is controlled by the arrow keys during the game
 * Collects Emeralds and coins for points
 * Dies when an enemy touches it.
 * Currently just a yellow block that can move around and collect emeralds
 * 
 */
public class Hero extends Character {
	private static final Color Hero_Color = Color.YELLOW;
	private int score;
	
	public Hero(World world, Point2D upLeftPoint) {
		super(world, upLeftPoint);
		this.setColor(Hero_Color);
		this.setSpeed(8);
		this.canDig = true;
	}
	
	/**
	 * get the hero's score
	 * @return score
	 */
	public int getScore(){
		return this.score;
	}
	
	/**
	 * add hero's score
	 * @param score to be added
	 */
	public void addScore(int score){
		this.score += score;
	}

	/**
	 * set the hero's score
	 * @param score to be set
	 */
	public void setScore(int score){
		this.score = score;
	}

}
