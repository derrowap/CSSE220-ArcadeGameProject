import static org.junit.Assert.*;

import java.awt.geom.Point2D;
import java.awt.geom.Point2D.Double;

import org.junit.Before;
import org.junit.Test;


public class TunnelTest {

	Tunnel tunnel = new Tunnel();
	World world = new World(1);
	Hero hero = new Hero(world, new Point2D.Double(5 * 72, 5 * 72));
	
	@Before
	public void setUp() throws Exception {
		
		tunnel.addEmptySpaces(new EmptySpace(world,new  Point2D.Double(5 * 72, 5 * 72)));
		tunnel.addEmptySpaces(new EmptySpace(world,new  Point2D.Double(5 * 72, 6 * 72)));
		tunnel.addEmptySpaces(new EmptySpace(world,new  Point2D.Double(5 * 72, 7 * 72)));
		tunnel.addEmptySpaces(new EmptySpace(world,new  Point2D.Double(5 * 72, 8 * 72)));
		tunnel.addEmptySpaces(new EmptySpace(world,new  Point2D.Double(5 * 72, 9 * 72)));
		tunnel.addEmptySpaces(new EmptySpace(world,new  Point2D.Double(5 * 72, 10* 72)));
		tunnel.addEmptySpaces(new EmptySpace(world,new  Point2D.Double(6 * 72, 10* 72)));
		tunnel.addEmptySpaces(new EmptySpace(world,new  Point2D.Double(7 * 72, 10* 72)));
		tunnel.addEmptySpaces(new EmptySpace(world,new  Point2D.Double(8 * 72, 10* 72)));
		tunnel.addEmptySpaces(new EmptySpace(world,new  Point2D.Double(9 * 72, 10* 72)));
		tunnel.addEmptySpaces(new EmptySpace(world,new  Point2D.Double(10* 72, 10* 72)));
	}

	@Test
	public void test() {
		Monster monster = new Monster(world, new Point2D.Double(5 * 72, 8 * 72));
		assertEquals('u',tunnel.getShortestWay(hero, monster));
	}

}
